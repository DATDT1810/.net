@model Users
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@using MyProjectClient.Controllers
@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- link bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/login.css">

    <style>
        .error {
            color: red;
            font-size: 14px;
            font-style: italic;
        }

        .navy-text {
            color: navy;
        }

        .form-row {
            margin-top: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .container1 {
            margin-left: 100px;
        }

        h6 {
            margin: 0;
        }

        img {
            border-radius: 50%;
            width: 150px;
            height: 150px;
        }
    </style>

    <title>Customer Profile</title>
</head>

<body>
    <div class="container">
        @if (TempData["SystemNotificationAdmin"] != null)
        {
            <div id="systemNotification" class="alert alert-success mt-1">
                <p class="text-dark">Notification: @TempData["SystemNotificationAdmin"]</p>
            </div>
        }
        <div class="row">
            <div class="col-sm-10 mx-auto">
                <h1 class="text-center navy-text">Admin Profile</h1>
            </div>
            <div class="float-end">
                <a asp-controller="UserManagement" asp-action="Index" data-bs-toggle="tooltip" title
                    class="btn btn-success" data-bs-original-title="Back" aria-label="Back"><i
                        class="fas fa-reply"></i></a>
            </div>
        </div>
    </div>
    <div class="container" style="max-width: 900px;">
        <div class="row form-row" style="margin-top: 10px;">
            <div class="tab-content">
                <hr>
                <form class="form" asp-controller="CustomerProfile" asp-action="CustomerProfile" method="post"
                    enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-4 bg p-3" style="background-color: #e9e7e7; height: 225px;">
                            <!--left col-->
                            <div class="text-center">
                                <img src="~/assets/user_pic/@Model.Picture" alt="Avatar customer"
                                    class="img-account-profile mb-2">
                                <input type="file" name="UserPicture" class="text-center center-block file-upload">
                            </div>
                        </div><!--/col-3-->
                        <div class="col-md-8">
                            @* Form Fields *@
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="FirstName" class="form-label"></label>
                                    <input type="text" asp-for="FirstName" class="form-control">
                                    <span asp-validation-for="FirstName" class="error"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="LastName" class="form-label"></label>
                                    <input type="text" asp-for="LastName" class="form-control">
                                    <span asp-validation-for="LastName" class="error"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="DateOfBirth" class="form-label"></label>
                                    <input type="date" asp-for="DateOfBirth" class="form-control">
                                    <span asp-validation-for="DateOfBirth" class="error"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Gender" class="form-label"></label>
                                    <input type="text" asp-for="Gender" class="form-control">
                                    <span asp-validation-for="Gender" class="error"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Address" class="form-label"></label>
                                    <input type="text" asp-for="Address" class="form-control">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="ZipCode" class="form-label"></label>
                                    <input type="text" asp-for="ZipCode" class="form-control">
                                    <span asp-validation-for="ZipCode" class="error"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="PhoneNumber" class="form-label"></label>
                                    <input type="text" asp-for="PhoneNumber" class="form-control">
                                    <span asp-validation-for="PhoneNumber" class="error"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input type="email" asp-for="Email" class="form-control">
                                    <span asp-validation-for="Email" class="error"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Username" class="form-label"></label>
                                    <input readonly type="text" asp-for="Username" class="form-control">
                                    <span asp-validation-for="Username" class="error"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="IDCard" class="form-label"></label>
                                    <input type="text" asp-for="IDCard" class="form-control">
                                    <span asp-validation-for="IDCard" class="error"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Password" class="form-label"></label>
                                    <input type="password" asp-for="Password" class="form-control"
                                        value="@Model.Password">
                                    <span asp-validation-for="Password" class="error"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="UserType" class="form-label"></label>
                                    <input readonly type="text" asp-for="UserType" class="form-control">
                                    <span asp-validation-for="UserType" class="error"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="createdAt" class="form-label"></label>
                                    <input readonly type="text" asp-for="createdAt" class="form-control">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="updateAt" class="form-label"></label>
                                    <input readonly type="text" asp-for="updateAt" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-end">
                        <input type="submit" class="btn btn-primary" value="Save changes">
                    </div>
                </form>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

    <script>
        setTimeout(function () {
            var systemNotification = document.getElementById('systemNotification');
            if (systemNotification) {
                systemNotification.style.display = 'none';
            }
        }, 5000);
    </script>
</body>

</html>
