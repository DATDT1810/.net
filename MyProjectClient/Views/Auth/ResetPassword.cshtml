@{
    ViewData["Title"] = "ResetPassword";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- link bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- link css custom -->
    <link rel="stylesheet" href="~/css/resetPassword.css">
    <title>Forgot Password</title>

</head>

<body>
    <div class="form-gap"></div>
    <div class="background-wrapper"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-md-offset-4 d-flex justify-content-center">
                <div class="panel panel-default">
                    <div class="panel-body p-4">
                        <div class="text-center" style="width: 350px;">
                            <h2 class="text-center text-white">Please create your new password!</h2>
                            <p class="text-white">Last step: Create your new password!</p>
                            <div class="panel-body">
                                <form asp-controller="Auth" asp-action="ResetPassword" class="form">
                                    <fieldset>
                                        <div class="form-group mb-3">
                                            <div class="form-outline">
                                                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"
                                                        style="color: blue;"></i>
                                                </span>
                                                <div>
                                                    <input name="pass" id="emailInput"
                                                        placeholder="Please enter your new password"
                                                        class="form-control" type="password" required>
                                                </div>
                                            </div>
                                        </div>
                                        <input class="btn btn-block form-control" value="Reset My Password"
                                            type="submit">
                                    </fieldset>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>