@{
    ViewData["Title"] = "ConfirmEmail";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    @* Link css custom *@
    <link rel="stylesheet" href="~/css/confirmEmail.css">
</head>

<body>
    <div class="form-gap"></div>
    <div class="background-wrapper"></div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-auto px-10">
                <div class="panel panel-default">
                    <div class="panel-body p-2">
                        <div class="text-center">
                            <h2 class="text-center text-white">Verification Code</h2>
                            <p class="text-white">We have sent you the verification code to your email!</p>
                            <form asp-action="ConfirmEmail" method="post">
                                <div class="enter_code">
                                    <input name="code" type="text" class="form-control">
                                </div>
                                <input class="Submit text-white " class="btn btn-block form-control"
                                    value="Let reset my password" type="submit">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>